
{
  "rules": {
    ".read": true,
    ".write": true,
    "sms_transactions": {
      ".indexOn": ["parsed_at", "matched_client_id", "status"]
    },
    "transactions": {
      ".indexOn": ["createdAt", "clientId", "status"]
    },
    "modern_usdt_records": {
      ".indexOn": ["accountId", "date", "source"]
    },
    "cash_receipts": {
      ".indexOn": ["clientId", "status"]
    },
    "cash_payments": {
      ".indexOn": ["clientId"]
    },
    "logs": {
      ".indexOn": ["entityId", "timestamp"]
    },
    "rate_history": {
      "fiat_rates": {
        ".indexOn": "timestamp"
      },
      "crypto_rates": {
        ".indexOn": "timestamp"
      },
      "crypto_fees": {
        ".indexOn": "timestamp"
      }
    }
  }
}
